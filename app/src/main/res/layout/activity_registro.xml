<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/fondopulse"
    android:screenOrientation="portrait"
    tools:context="com.example.liammartinezheredia.pulsexync.Registro">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="18dp"
        app:srcCompat="@drawable/pulseletra2"
        android:layout_below="@+id/pulse"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView" />

    <TextView
        android:text="Nombre de Usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="50dp"

        android:id="@+id/textView2"
        android:textColor="@android:color/background_light" />

    <TextView
        android:text="Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_below="@+id/nombretxt"
        android:layout_alignStart="@+id/nombretxt"
        android:layout_marginTop="22dp"
        android:textColor="@android:color/background_light" />

    <TextView
        android:text="Contraseña"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/textView6"
        android:layout_below="@+id/email"
        android:layout_alignStart="@+id/email"
        android:textColor="@android:color/background_light" />

    <EditText
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nombretxt"
        android:backgroundTint="@android:color/background_light"
        android:textColorHint="@android:color/darker_gray"
        android:textCursorDrawable="@android:color/darker_gray"
        android:hint="tu_nombre"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <EditText
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email"
        android:textColor="@android:color/darker_gray"
        android:textColorHint="@android:color/darker_gray"
        android:hint="tu_email@ejemplo.com"
        android:textCursorDrawable="@android:color/darker_gray"
        android:paddingTop="0dp"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <EditText
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/contra"
        android:textColorHint="@android:color/darker_gray"
        android:textCursorDrawable="@android:color/darker_gray"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <EditText
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/contra2"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <Button
        android:text="Crear Cuenta"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:textColor="@android:color/background_light"
        android:background="@color/colorTop"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/contra2"
        android:layout_centerHorizontal="true"
        android:onClick="validar" />

    <TextView
        android:text="Confirmar contraseña"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/textView7"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/contra"
        android:layout_alignStart="@+id/contra"
        android:onClick="Regresarlogin" />

    <TextView
        android:text="Ya tengo una cuenta !!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/textView8"
        android:onClick="Regresarlogin"
        android:textColor="@android:color/darker_gray"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <TextView
        android:text="Pulse.Inc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:layout_alignParentBottom="true"
        android:textSize="7dp"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
